<!DOCTYPE html>
<html lang="ru">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@Page.Title — веб-страница ASP.NET</title>
             <link href="~/admin/css/bootstrap.min.css" rel="stylesheet" />
      
             <script src="~/admin/js/bootstrap.js"></script>
   



        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
       
        <script src="~/Scripts/jquery-ui-1.8.24.js"></script>
        <script src="~/Scripts/modernizr-2.6.2.js"></script>
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <header>
            <div class="content-wrapper">

                    <nav class="navbar navbar-inverse" role="navigation">
 <ul class="nav navbar-nav">
        <li class="active"><a href="~/admin/main">Панель Управления</a></li>
      <li><a href="~/admin/CatalogList">Каталог</a></li>
        <li><a href="~/admin/GuestBook">Отзывы</a></li>
        <li><a href="~/admin/OrderList">Заказы</a></li>
      <li><a href="~/">На сайт</a></li>
      <li>
       @if (WebSecurity.IsAuthenticated) {
                            <text>
                                <a class="email" href="~/Account/Manage" title="Manage">@WebSecurity.CurrentUserName</a>
                                <form id="logoutForm" action="~/Account/Logout" method="post">
                                    @AntiForgery.GetHtml()
                                    <a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>
                                </form>
                            </text>
                        }
      </li>
 
      </ul>
</nav>


          
            
            </div>
        </header>
              <div class="container body-content">
@RenderBody()
         
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year – Enterprise CMS -  Market</p>
                </div>
            </div>
        </footer>
        @RenderSection("Scripts", required: false)
    </body>
</html>