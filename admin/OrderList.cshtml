     Layout = "~/admin/_SiteLayout.cshtml";
         var db = Database.Open("Bases");
            var orders = db.Query("SELECT * FROM orders ");
}

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title></title>
    </head>
    <body>
        <table class="table table-striped">
<tr>
<td>Дата</td>
<td>Товар</td>
<td>Покупатель</td>
<td>Телефон</td>
<td>Город</td>
<td>Емаил</td>
